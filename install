#!/usr/bin/env node

/*jslint node: true */
'use strict';

var path = require('path'),
    exec = require('./lib/exec');

console.log('Installing titanium stuff...');

console.log('--- Installing Build Command(s) ---');
exec('ti', ['config', '-a', 'paths.commands', path.join( __dirname , 'plugin')], null, function() {
	   /* We are going to need to ensure we are using ruby 1.9 or greater */
		 /* We are also going to need to check for bundler. install it if it doesn't exist */
		 /* now it is time to run bundler and install calabash-android and ios */

    console.info('Titanium CLI command installed.');

});


